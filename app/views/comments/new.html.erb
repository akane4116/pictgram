<div class="topic-index-wrapper" >
   <div class="container" >
      <div class="row" >
         <div class="coi-md-6 col-md-offset-3" >
            <h1 class="text-center">Comment</h1>
          <%= form_with (model: [@topic. @comment], local: true) do |f| %>
           <div class="form-group">
              <%= f.label :content %>
              <%= f.text_area :content, class: 'form-control' %>
           </div>
           <%= e.hidden_field :user_id, :value => @user.id %>
           <% if logged_in? %>
             <%= f.submit  'コメントする', class: 'btn btn-black btn-block' %>
          <% end %>
          
         <% end %>
         </div>
      </div>
   </div>
</div>
